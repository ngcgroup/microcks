worker_processes <%= ENV['NGINX_WORKERS'] || 2 %>;
error_log /dev/stdout info;

daemon off;

events {
	use epoll;
	accept_mutex on;
	worker_connections 256;
}

http {
	log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id upstream_server=$upstream_addr';
	access_log logs/nginx/access.log l2met;
	error_log logs/nginx/error.log;

	server_tokens off;
	proxy_ssl_server_name on;
    # resolver needs to be set because we're using dynamic proxy_pass
    resolver 8.8.8.8;
    upstream backend {
        server dockhero-vertical-79141-flexible-ssl.dockhero.io:443;
    }

	server {
		listen <%= ENV["PORT"] %>;

		location / {
		    proxy_ssl_verify on;
		    proxy_ssl_server_name on;
		    proxy_ssl_name dockhero-vertical-79141-flexible-ssl.dockhero.io;
		    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_pass  https://backend;
            proxy_set_header Host $http_host;
            proxy_set_header X_FORWARDED_PROTO https;
		}
	}
}